{
  "name": "@adobe/htlengine",
  "version": "3.2.0",
  "description": "Javascript Based HTL (Sightly) parser",
  "main": "src/index.js",
  "license": "Apache-2.0",
  "repository": "https://github.com/adobe/htlengine",
  "scripts": {
    "build": "antlr4 -Dlanguage=JavaScript -Xexact-output-dir -o src/parser/generated src/parser/grammar/SightlyLexer.g4 src/parser/grammar/SightlyParser.g4 src/parser/grammar/SightlyParser.g4",
    "semantic-release": "semantic-release",
    "commit": "git-cz",
    "start": "node src/run.js",
    "test": "nyc --reporter=text --reporter=lcov --check-coverage --branches 68 --statements 82 --lines 82 mocha",
    "test-ci": "npm run lint && npm run test && codecov",
    "lint": "./node_modules/.bin/eslint .",
    "snyk-protect": "snyk protect",
    "prepare": "npm run snyk-protect"
  },
  "dependencies": {
    "antlr4": "^4.7.2",
    "co": "^4.6.0",
    "fs-extra": "^7.0.1",
    "lodash": "^4.17.5",
    "moment": "^2.24.0",
    "node-esapi": "0.0.1",
    "numeral": "^2.0.6",
    "rehype-parse": "^6.0.0",
    "sanitizer": "^0.1.3",
    "source-map": "^0.7.3",
    "unified": "^7.1.0",
    "urijs": "^1.19.1",
    "xregexp": "^4.2.4",
    "snyk": "^1.189.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/git": "^7.0.10",
    "@semantic-release/github": "^5.2.10",
    "codecov": "^3.2.0",
    "commitizen": "^3.1.1",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.15.3",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-header": "^3.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.2",
    "ghooks": "^2.0.4",
    "istanbul": "^1.1.0-alpha.1",
    "jsdom": "^15.1.0",
    "lint-staged": "^8.1.5",
    "mocha": "6.1.4",
    "mocha-junit-reporter": "^1.21.0",
    "nyc": "^13.3.0",
    "rehype-stringify": "^5.0.0",
    "remark-parse": "^6.0.3",
    "remark-rehype": "^4.0.0",
    "semantic-release": "^15.13.12"
  },
  "snyk": true,
  "lint-staged": {
    "*.js": "eslint"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npx lint-staged"
    }
  }
}
